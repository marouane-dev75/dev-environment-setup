# Ghostty Terminal Configuration
# Optimized for development work

# Font Configuration
font-family = "JetBrains Mono"
font-size = 14
font-feature = -calt  # Disable ligatures, remove this line if you want ligatures

# Theme - Catppuccin Mocha
# Background and foreground
background = #1e1e2e
foreground = #cdd6f4

# Cursor colors
cursor-color = #f5e0dc
cursor-text = #1e1e2e

# Selection colors
selection-background = #585b70
selection-foreground = #cdd6f4

# Normal colors
palette = 0=#45475a
palette = 1=#f38ba8
palette = 2=#a6e3a1
palette = 3=#f9e2af
palette = 4=#89b4fa
palette = 5=#f5c2e7
palette = 6=#94e2d5
palette = 7=#bac2de

# Bright colors
palette = 8=#585b70
palette = 9=#f38ba8
palette = 10=#a6e3a1
palette = 11=#f9e2af
palette = 12=#89b4fa
palette = 13=#f5c2e7
palette = 14=#94e2d5
palette = 15=#a6adc8

# Window Configuration
window-padding-x = 10
window-padding-y = 10
window-padding-balance = true
window-padding-color = background

# Window decorations (use native macOS decorations)
window-decoration = true

# Background opacity (1.0 = fully opaque, 0.0 = fully transparent)
background-opacity = 0.95

# Cursor Configuration
cursor-style = block
cursor-style-blink = true

# Shell Integration
shell-integration = detect
shell-integration-features = cursor,sudo,title

# Clipboard
clipboard-read = allow
clipboard-write = allow
clipboard-trim-trailing-spaces = true

# Mouse
mouse-hide-while-typing = true

# Copy on select
copy-on-select = true

# Scrollback
scrollback-limit = 100000

# Performance
resize-overlay = never

# Keybindings
# Tab management
keybind = cmd+t=new_tab
keybind = cmd+w=close_surface
keybind = cmd+shift+left_bracket=previous_tab
keybind = cmd+shift+right_bracket=next_tab
keybind = cmd+1=goto_tab:1
keybind = cmd+2=goto_tab:2
keybind = cmd+3=goto_tab:3
keybind = cmd+4=goto_tab:4
keybind = cmd+5=goto_tab:5
keybind = cmd+6=goto_tab:6
keybind = cmd+7=goto_tab:7
keybind = cmd+8=goto_tab:8
keybind = cmd+9=goto_tab:9

# Split management
keybind = cmd+d=new_split:right
keybind = cmd+shift+d=new_split:down
keybind = cmd+shift+w=close_surface

# Navigation between splits
keybind = cmd+alt+left=goto_split:left
keybind = cmd+alt+right=goto_split:right
keybind = cmd+alt+up=goto_split:top
keybind = cmd+alt+down=goto_split:bottom

# Font size adjustment
keybind = cmd+plus=increase_font_size:1
keybind = cmd+minus=decrease_font_size:1
keybind = cmd+0=reset_font_size

# Copy/Paste
keybind = cmd+c=copy_to_clipboard
keybind = cmd+v=paste_from_clipboard

# Search
keybind = cmd+f=toggle_quick_terminal

# Clear screen
keybind = cmd+k=clear_screen

# Fullscreen
keybind = cmd+enter=toggle_fullscreen

# Miscellaneous
confirm-close-surface = false
quit-after-last-window-closed = false
macos-non-native-fullscreen = false
